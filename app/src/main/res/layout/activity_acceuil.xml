<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.pierre_henrilibeert.edt.Acceuil"
    android:background="#ffeeeeee"
    android:id="@+id/headacceuil"
    android:orientation="vertical">>

    <!--
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/head_edt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="412dp" />
        -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff000000">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnmenu"
            android:background="@drawable/btn_menu"

            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            android:onClick="onClick"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="60dp"
            android:id="@+id/imageView2"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Aujourd&apos;hui"
        android:id="@+id/ajdtext"
        android:layout_marginTop="42dp"
        android:textColor="#000000"
        android:textSize="30sp"
        android:singleLine="true"
        android:fontFamily="@string/hello_world"
        android:layout_marginLeft="12dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/listView"

        android:layout_marginTop="22dp"
        android:background="#ffffff"
        android:layout_marginLeft="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Agenda"
        android:id="@+id/agendatext"
        android:layout_marginTop="42dp"
        android:textColor="#000000"
        android:textSize="30sp"
        android:singleLine="true"
        android:fontFamily="@string/hello_world"
        android:layout_marginLeft="12dp" />

</LinearLayout>

