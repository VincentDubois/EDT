<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pierre_henrilibeert.edt.Acceuil"
    android:background="@drawable/fond"
    android:id="@+id/headacceuil">>

    ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/head_edt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="412dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Aujourd&apos;hui"
        android:id="@+id/ajdtext"
        android:layout_marginTop="42dp"
        android:textColor="#000000"
        android:textSize="30sp"
        android:singleLine="true"
        android:fontFamily="@string/hello_world"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Agenda"
        android:id="@+id/agendatext"
        android:layout_marginTop="207dp"
        android:textColor="#000000"
        android:textSize="30sp"
        android:singleLine="true"
        android:fontFamily="@string/hello_world"
        android:layout_below="@+id/ajdtext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="1000dp"
        android:layout_height="180dp"
        android:id="@+id/listView"
        android:layout_below="@+id/ajdtext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:background="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/btnmenu"
        android:background="@drawable/btn_menu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:onClick="onClick"/>

</RelativeLayout>
